<!--header for the page-->
<div>
  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        {{#if articles}}
          {{#each articles}}
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">{{title}} </h4>
              <p class="card-text">{{blurb}}</p>
              <a href="{{url}}" class="card-link">Link</a>
              <button type="button" id="{{_id}}" class="btn btn-secondary remove">Remove</button>
              <button type="button" data-state="open" id="{{_id}}"
                class="btn btn-secondary comment modalControl">Comment</button>
            </div>
          </div>
          {{/each}}
        {{else}}
          <h4>Looks like you have not saved any articles</h4>
        {{/if}}
      </div>
      <div class="col-lg-3">
      </div>
    </div>
  </div>
</div>
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-comment-content">
    <div>
      <div id="commentForm">
        <h3>Title</h3>
        <textarea id="commentTitle"></textarea>
        <h3>Comment</h3>
        <textarea id="commentBody"></textarea>
      </div>
      <div id="footer"></div>
      <button type="button" id="saveComment" class="btn btn-secondary saveComment">Save</button>
      <button type="button" data-state="Close" id="close" type="submit"
        class="btn btn-secondary modalControl">Close</button>
      <div id="listHolder" style="display:block">
        <ul id="comments"></ul>
      </div>
      <div></div>
    </div>
  </div>
</div>